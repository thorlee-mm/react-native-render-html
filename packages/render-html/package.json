{
  "name": "react-native-render-html",
  "version": "5.0.0-alpha.2",
  "author": "Archriss",
  "license": "BSD-2-Clause",
  "description": "React Native component that renders HTML as native views.",
  "main": "lib/commonjs/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "homepage": "https://github.com/archriss/react-native-render-html#readme",
  "bugs": {
    "url": "https://github.com/archriss/react-native-render-html/issues"
  },
  "keywords": [
    "react-native",
    "react-component",
    "react-native-component",
    "html",
    "render-html"
  ],
  "repository": "https://github.com/archriss/react-native-render-html",
  "scripts": {
    "test": "yarn test:jest && yarn test:ts && yarn test:lint",
    "test:jest": "jest src/",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint --ext ts,tsx src/",
    "build": "bob build",
    "prepack": "yarn run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-react-jsx": "^7.12.5",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/bob": "^0.16.2",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.14",
    "@types/react-native": "^0.63.35",
    "babel-jest": "^26.6.3",
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.64.0",
    "prettier": "^2.1.2",
    "react": "16.13.1",
    "release-it": "^14.2.1",
    "typescript": "~3.9.7"
  },
  "peerDependencies": {
    "prop-types": "*",
    "react": "*",
    "react-native": "^0.63.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@native-html/transient-render-engine": "^3.0.0"
